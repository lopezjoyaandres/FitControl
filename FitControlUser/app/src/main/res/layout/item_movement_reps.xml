<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="10dp"
    android:id="@+id/parentLayoutcolor"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/registermid"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"

    >
    <LinearLayout
        android:id="@+id/idtopnames"
        android:layout_width="match_parent"
        android:background="@drawable/backitemtopblue"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        >
        <TextView
            android:textColor="#FFF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Number"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>


        <TextView
            android:text="Date"
            android:textColor="#FFF"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

        </TextView>
        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:text="Form"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/idnumberrep"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="25dp"
            >

        </TextView>


        <TextView
            android:id="@+id/iddaterep"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

        </TextView>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/idrepokrep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></ImageView>
    </LinearLayout>










</LinearLayout>