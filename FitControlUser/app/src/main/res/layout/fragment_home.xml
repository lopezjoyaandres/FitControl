<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.HomeFragment" >
    <LinearLayout
        android:id="@+id/mainlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#702F3137"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:background="@drawable/backhometopblue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.61"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_margin="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        >



                        <ImageView
                            android:id="@+id/idimage1"
                            android:layout_width="99dp"
                            android:layout_height="97dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="50dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="80dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="80dp">

                        </ImageView>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/idtotalreps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </com.github.mikephil.charting.charts.PieChart>

                        <TextView
                            android:visibility="invisible"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/idporcentaje"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/cornes_login"
                            android:elevation="5dp">

                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.39"
            android:elevation="10dp"
            android:background="@drawable/registerbot"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:id="@+id/idlayoutrep"
                        android:background="@drawable/cornes_loginizq"
                        android:layout_marginBottom="6dp"
                        android:layout_width="0dp"
                        android:elevation="6dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:id="@+id/idtotalrepetitions"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:text="">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            >
                            <TextView
                                android:textColor="#FFF"
                                android:background="@drawable/notes"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Repetitions">

                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/idlayoutmostfrequent"
                        android:layout_marginLeft="10dp"
                        android:elevation="6dp"
                        android:background="@drawable/cornes_login"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/idtotalbestmovementrepetitions"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:textColor="#D3B20F"
                            android:gravity="center"
                            android:text="">

                        </TextView>
                        <TextView
                            android:layout_weight="0.3"
                            android:background="@drawable/notes"
                            android:textSize="10dp"
                            android:textColor="#FFF"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"

                            android:text="Most frequent movement">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout


                    android:elevation="6dp"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/idlayoutlevel"
                        android:layout_weight="1"
                        android:elevation="6dp"

                        android:orientation="vertical"
                        android:background="@drawable/cornes_login">
                        <TextView
                            android:id="@+id/idlvltotal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:text="">

                        </TextView>
                        <TextView
                            android:textColor="#FFF"
                            android:background="@drawable/notes"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"

                            android:text="Total level">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <LinearLayout
                    android:elevation="6dp"
                    android:layout_marginLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:background="@drawable/cornes_loginderech">
                    <TextView
                        android:textColor="#FFF"
                        android:background="@drawable/note_home_der"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"

                        android:text="Note">

                    </TextView>
                    <TextView
                        android:id="@+id/idtotalnoterepetitions"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</RelativeLayout>